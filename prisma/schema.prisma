// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())

  username String @unique
  password String

  professeurs Professeur[]
  salles      Salle[]
  occuper     Occuper[]

  @@map("users")
}

model Professeur {
  id Int @id @default(autoincrement())

  codeprof String @unique
  nom      String
  prenom   String
  grade    String

  occuper Occuper[]

  userid Int
  user   User @relation(fields: [userid], references: [id], onDelete: Cascade)

  @@map("professeurs")
}

model Salle {
  id Int @id @default(autoincrement())

  codesal     String @unique
  designation String

  occuper Occuper[]

  userid Int
  User   User @relation(fields: [userid], references: [id], onDelete: Cascade)

  @@map("salles")
}

model Occuper {
  id Int @id @default(autoincrement())

  idprof     Int
  professeur Professeur @relation(fields: [idprof], references: [id])

  idsal Int
  salle Salle @relation(fields: [idsal], references: [id])

  date String

  userid Int
  User   User @relation(fields: [userid], references: [id], onDelete: Cascade)

  @@map("occuper")
}

model Professeur_audit {
  id             Int      @id @default(autoincrement())
  type_operation String
  utilisateur    Int?
  old_codeprof   String?
  old_nom        String?
  old_prenom     String?
  old_grade      String?
  new_codeprof   String?
  new_nom        String?
  new_prenom     String?
  new_grade      String?
  date_maj       DateTime

  @@map("professeur_audit")
}

model Salle_audit {
  id              Int      @id @default(autoincrement())
  type_operation  String
  utilisateur     Int?
  old_codesal     String?
  old_designation String?
  new_codesal     String?
  new_designation String?
  date_maj        DateTime

  @@map("salle_audit")
}

model Occuper_audit {
  id             Int    @id @default(autoincrement())
  type_operation String
  utilisateur    Int?

  old_prof Int?
  old_sal  Int?
  old_date String?
  new_prof Int?
  new_sal  Int?
  new_date String?

  date_maj DateTime

  @@map("occuper_audit")
}
