generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())

  username String @unique
  password String

  professeurs Professeur[]
  salles      Salle[]
  occuper     Occuper[]

  @@map("users")
}

model Professeur {
  id Int @id @default(autoincrement())

  codeprof String @unique
  nom      String
  prenom   String
  grade    String

  occuper Occuper?

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("professeurs")
}

model Salle {
  id Int @id @default(autoincrement())

  codesal     String @unique
  designation String

  occuper Occuper?

  userId Int
  User   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("salles")
}

model Occuper {
  id Int @id @default(autoincrement())

  idprof     Int        @unique
  professeur Professeur @relation(fields: [idprof], references: [id])

  idsal Int   @unique
  salle Salle @relation(fields: [idsal], references: [id])

  date DateTime

  userId Int
  User   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("occuper")
}

